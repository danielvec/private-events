<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% if user_signed_in? %> 
    <ul class="heading">
      <div class="header">
        <div class="left-header">
          <li><%= link_to "privateevents", root_path %></li>
        </div>
        <div class="right-header">
          <li></li>
          <li><%= link_to "Create an Event", new_event_path %></li>
          <li><%= link_to "Profile", user_path(current_user.id) %></li>
          <li><%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false }, class:"logout-btn" %></li>
        </div>
      </div>
    </ul>
  <% else %>
    <div class="login-header">
      <li><%= link_to "privateevents", root_path %></li>
    </div>
  <% end %>

    <%= yield %>

    <% if flash[:notice].present? %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if flash[:alert].present? %>
      <p class="alert"><%= alert %></p>
    <% end %>
  </body>
</html>
